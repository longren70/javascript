<script>
    $(function(){
        $(".nav>li").mouseover(function(){
            $(this).children("ul").stop().show();       // 注意：stop()方法必须写到动画方法的前面
        });
        $(".nav>li").mouseout(function(){
            $(this).children("ul").stop().hide();       // 注意：stop()方法必须写到动画方法的前面
        });
    })

</script>

